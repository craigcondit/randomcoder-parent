<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.randomcoder</groupId>
	<artifactId>randomcoder-base</artifactId>
	<packaging>pom</packaging>
	<name>Randomcoder Organizational Pom</name>
	<version>24-SNAPSHOT</version>
	<inceptionYear>2006</inceptionYear>
	<organization>
		<name>Craig Condit</name>
		<url>https://randomcoder.org/</url>
	</organization>
	<url>https://randomcoder.org/</url>
	<description>
		This package contains the Randomcoder organizational settings.
	</description>
	<developers>
		<developer>
			<id>ccondit</id>
			<name>Craig Condit</name>
			<email>ccondit@randomcoder.org</email>
			<roles>
				<role>architect</role>
				<role>developer</role>
			</roles>
			<timezone>-7</timezone>
		</developer>
	</developers>
	<licenses>
		<license>
			<name>BSD style license</name>
			<url>LICENSE.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	<ciManagement>
		<system>jenkins</system>
		<url>https://randomcoder.org/jenkins/</url>
	</ciManagement>
	<scm>
		<connection>scm:git:https://scm.randomcoder.org/git/randomcoder-base</connection>
		<developerConnection>scm:git:https://scm.randomcoder.org/git/randomcoder-base</developerConnection>
		<url>https://randomcoder.org/cgit/public/randomcoder-base</url>
	</scm>
	<distributionManagement>
		<repository>
			<id>randomcoder-release-repository</id>
			<url>https://randomcoder.org/nexus/content/repositories/releases</url>
		</repository>
		<snapshotRepository>
			<id>randomcoder-snapshot-repository</id>
			<url>https://randomcoder.org/nexus/content/repositories/snapshots</url>
		</snapshotRepository>
		<site>
			<id>randomcoder-site</id>
			<url>dav:https://randomcoder.org/nexus/content/sites/${project.artifactId}</url>
		</site>
	</distributionManagement>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<build>
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-webdav-jackrabbit</artifactId>
				<version>2.4</version>
			</extension>
		</extensions>
		<plugins>
			<plugin>
				<artifactId>maven-site-plugin</artifactId>
				<version>3.3</version>
				<configuration>
					<relativizeDecorationLinks>false</relativizeDecorationLinks>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.9</version>
			</plugin>
			<plugin>
				<artifactId>maven-deploy-plugin</artifactId>
				<version>2.7</version>
			</plugin>
			<plugin>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.2.1</version>
			</plugin>
		</plugins>
	</build>
	<reporting>
		<plugins>
			<plugin>
				<artifactId>maven-project-info-reports-plugin</artifactId>
				<version>2.7</version>
			</plugin>
		</plugins>
	</reporting>
</project>
